@page
@model BoardGames.UpsertModel

@using BoardGames.Utility

    <hr />

@if (User.IsInRole(SD.ManagerRole))
{
    <form method="post" asp-action="Upsert">
        <div class="container">
            <div class="row px-2 mx-2 bg-secondary border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.TopicObj.Id != 0)
                {
                    <input type="hidden" asp-for="TopicObj.Id" />
                }
                <div class="col-md-12 px-3" style="border-bottom:1px solid #325d88;">
                    <h2 class="text-white">@(Model.TopicObj.Id != 0 ? "Update" : "Create") Topic</h2>
                </div>
                <div class="col-md-8 pt-3">
                    <div class="row form-group">
                        <div class="col-md-3">
                            <label asp-for="TopicObj.Name"></label>
                        </div>
                        <div class="col-md-9">
                            <input class="form-control" asp-for="TopicObj.Name" />
                            <span class="text-danger" asp-validation-for="TopicObj.Name"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-9 offset-3">
                            <div class="row">
                                <div class="col-md-3">
                                    <a asp-page="./Index" class="btn btn-warning form-control text-white">Back</a>
                                </div>
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-success form-control">@(Model.TopicObj.Id != 0 ? "Update" : "Create")</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div>
        <h1 class="danger">Access Denied</h1>
    </div>
}
