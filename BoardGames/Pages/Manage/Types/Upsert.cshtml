@page
@model BoardGames.Pages.Manage.Types.UpsertModel

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 bg-white border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.TypeObj.Id != 0)
            {
                <input type="hidden" asp-for="TypeObj.Id" />
            }
            <div class="col-md-12 px-3" style="border-bottom:1px solid #325d88;">
                <h2 class="text-primary">@(Model.TypeObj.Id != 0 ? "Update" : "Create") Type</h2>
            </div>
            <div class="col-md-8 pt-3">
                <div class="row form-group">
                    <div class="col-md-3">
                        <label asp-for="TypeObj.Name"></label>
                    </div>
                    <div class="col-md-9">
                        <input class="form-control" asp-for="TypeObj.Name" />
                        <span class="text-danger" asp-validation-for="TypeObj.Name"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-9 offset-3">
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary form-control">@(Model.TypeObj.Id != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-md-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


